<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="@string/Heading"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/starlogo" />

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="606dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="161dp"
                android:layout_height="129dp"
                android:onClick="tapped"
                android:contentDescription="Burger-Section"
                android:tag="1"
                app:srcCompat="@drawable/burgers" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-130dp"
                android:layout_marginTop="130dp"
                android:padding="15dp"
                android:text="Burgers"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="164dp"
                android:layout_height="127dp"
                android:layout_marginLeft="100dp"
                android:onClick="tapped"
                android:contentDescription="Pizza-Section"
                android:tag="2"
                app:srcCompat="@drawable/pizzas" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="128dp"
                android:layout_height="51dp"
                android:layout_marginLeft="-120dp"
                android:layout_marginTop="130dp"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="Pizza"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="171dp"
                android:layout_height="139dp"
                android:contentDescription="Chicken-Buckets"
                android:onClick="tapped"
                android:tag="3"
                app:srcCompat="@drawable/chicken" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-150dp"
                android:layout_marginTop="150dp"
                android:text="Chicken Buckets"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="167dp"
                android:layout_height="139dp"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="0.2dp"
                android:contentDescription="Pasta-Section"
                android:onClick="tapped"
                android:tag="4"
                app:srcCompat="@drawable/pasta" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-110dp"
                android:layout_marginTop="149dp"
                android:layout_marginRight="-50dp"
                android:text="Pastas"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>